{
    "name": "server-app",
    "author": "A.D.",
    "license": "SEE LICENSE.txt - MIT Based",
    "private": true,
    "repository": {
        "type": "git",
        "url": ""
    },
    "version": "0.0.1",
    "type": "module",
    "main": "src/index.ts",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "devgen": "tsx watch --ignore 'src/tsoa-build/**' --ignore '**/validationModels.ts' --ignore '**/controllers/generated/*' src/indexWrapper.ts",
        "serve": "tsx src/index.ts",
        "build": "pnpm run gen-all && tsup && cp tsconfig.json dist/tsconfig.json && cp tsoa.json dist/tsoa.json && cp src/tsoa-build/openapi.json dist/tsoa-build/openapi.json",
        "build:types": "tsc --project tsconfig.json",
        "start": "node dist/index.js",
        "gen-database": "tsx src/data/initializer.ts",
        "gen-all": "tsx src/generators/generate-all.ts",
        "gen-tsoa": "tsx src/generators/tsoa-generator.ts",
        "tsoa-gen-cli": "echo 'Generating TSOA routes and spec...' && tsoa routes && tsoa spec && echo 'Done'",
        "gen-class-validators": "tsx src/generators/class-validator-generator.ts",
        "gen-controllers": "tsx src/generators/controllers-generator.ts",
        "gen-api-schema": "tsx src/generators/schema-generator.ts",
        "gen-api-client": "tsx src/generators/api-client-generator.ts",
        "gen-api-client-cli": "openapi --input ./app/openapi.json --output ../client/src/api-client --client axios --indent 2 --exportSchemas true",
        "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
        "lintfix": "eslint . --fix --report-unused-disable-directives --max-warnings 0 --rule 'tsdoc/syntax: off'",
        "gen-docs": "rm -rf ../docs/generated/ && cp tsconfig.json tsconfig.typedoc.json && typedoc && ../../scripts/docs-to-pages.sh",
        "list-pkg-sites": "tsx scripts/list-pkg-sites.ts"
    },
    "dependencies": {
        "@sequelize/core": "7.0.0-alpha.42",
        "@sequelize/sqlite3": "7.0.0-alpha.42",
        "@sequelize/validator.js": "7.0.0-alpha.42",
        "@tsoa/cli": "^6.4.0",
        "@tsoa/runtime": "^6.4.0",
        "@types/sequelize": "^4.28.20",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "eslint": "^9.10.0",
        "express": "^4.21.0",
        "helmet": "^8.0.0",
        "inversify": "^6.0.2",
        "inversify-binding-decorators": "^4.0.0",
        "jsonwebtoken": "^9.0.2",
        "reflect-metadata": "^0.2.2",
        "tsoa": "^6.4.0",
        "tsx": "^4.19.1",
        "typescript": "^5.6.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.10.0",
        "@hey-api/openapi-ts": "^0.52.11",
        "@microsoft/tsdoc": "^0.15.0",
        "@microsoft/tsdoc-config": "^0.17.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/eslint": "^9.6.1",
        "@types/eslint__js": "^8.42.3",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^20.16.5",
        "@types/qs": "^6.9.16",
        "@types/swagger-ui-express": "^4.1.6",
        "@typescript-eslint/eslint-plugin": "^8.6.0",
        "@typescript-eslint/parser": "^8.6.0",
        "depcheck": "^1.4.7",
        "eslint-plugin-tsdoc": "^0.3.0",
        "globals": "^15.9.0",
        "swagger-ui-express": "^5.0.1",
        "tsup": "^8.3.0",
        "typedoc": "^0.26.7",
        "typescript-eslint": "^8.6.0"
    },
    "tsup": {
        "entry": [
            "src"
        ],
        "outDir": "dist",
        "target": "ESNext",
        "format": [
            "esm"
        ],
        "splitting": false,
        "sourcemap": true,
        "clean": true,
        "dts": true,
        "dtsResolve": true,
        "minify": true,
        "skipNodeModulesBundle": true,
        "platform": "node",
        "cjsInterop": true,
        "shims": true
    }
}
